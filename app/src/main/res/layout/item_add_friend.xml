<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E4E1E1">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageAvatarFriend"
                android:layout_width="129dp"
                android:layout_height="0dp"
                android:src="@drawable/bavarian"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.384" />


                <TextView
                    android:id="@+id/textNameFriend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="16dp"
                    android:text="Nguyen Van An"
                    android:textSize="@dimen/sp_24"
                    android:textStyle="bold|italic"
                    app:layout_constraintLeft_toRightOf="@id/imageAvatarFriend"
                    app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/buttonAddFriend"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_add"
                android:text="Thêm bạn bè"
                android:textColor="@color/colorWhile"
                android:layout_marginRight="@dimen/dp_32"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textNameFriend"
                app:layout_constraintTop_toBottomOf="@+id/textNameFriend" />

            <Button
                android:id="@+id/buttonCancelFriend"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginRight="@dimen/dp_32"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_button"
                android:text="Hủy bỏ"
                android:textColor="@color/colorWhile"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/buttonAddFriend"
                app:layout_constraintTop_toBottomOf="@+id/buttonAddFriend"
                app:layout_constraintVertical_bias="0.434" />



        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>

