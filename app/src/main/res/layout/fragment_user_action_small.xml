<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/titleOne"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center_horizontal"
                android:textStyle="italic"
                android:textColor="@color/colorBack"
                android:textSize="@dimen/dp_24"
                android:text="Danh sách phân chia hoạt động con"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerListUserMakeActionSmall"
                android:layout_width="match_parent"
                tools:itemCount="4"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_8"
                tools:listitem="@layout/item_user_action_small"
                android:layout_height="0dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/titleOne"
                />
            <TextView
                android:id="@+id/titleTwo"
                app:layout_constraintTop_toBottomOf="@id/recyclerListUserMakeActionSmall"
                android:gravity="center_horizontal"
                android:textStyle="italic"
                android:textColor="@color/colorBack"
                android:layout_marginTop="@dimen/dp_8"
                android:textSize="@dimen/dp_24"
                android:text="Nhiệm vụ của mình"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycleMyActionSmall"
                tools:listitem="@layout/item_my_action_small"
                app:layout_constraintTop_toBottomOf="@id/titleTwo"
                android:layout_width="match_parent"
                tools:itemCount="4"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>